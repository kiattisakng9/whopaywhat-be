# Application Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Supabase/PostgreSQL Database URL for Prisma
DATABASE_URL=postgresql://username:password@localhost:5432/whopaywhat?schema=public
DIRECT_URL=postgresql://username:password@localhost:5432/whopaywhat?schema=public

# MongoDB Configuration (if using MongoDB alongside)
MONGODB_URI=mongodb://localhost:27017/whopaywhat?authSource=whopaywhat
MONGODB_DATABASE=whopaywhat
# MongoDB authentication credentials for Docker container
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h