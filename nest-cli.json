{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "watchOptions": {
      "ignored": [
        "node_modules",
        "dist",
        "coverage",
        ".git",
        ".vscode",
        "*.log",
        "*.d.ts"
      ],
      "poll": 1000,
      "aggregateTimeout": 300
    }
  }
}
